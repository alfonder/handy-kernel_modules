{
  "image": "linuxdev:latest",
  "runArgs": [
    "--network=host",
  ],
  "extensions": [
    "2gua.rainbow-brackets",
    "alefragnani.Bookmarks",
    "alesiong.clang-tidy-linter",
    "austin.code-gnu-global",
    "betwo.vscode-linux-binary-preview",
    "medo64.render-crlf",
    "mikestead.dotenv",
    "ms-vscode.cpptools",
    "vscode-icons-team.vscode-icons",
  ],
  "mounts": [
    "source=${localEnv:HOME}/projects/linux,target=/workspaces/linux,type=bind,consistency=cached"
  ]
}